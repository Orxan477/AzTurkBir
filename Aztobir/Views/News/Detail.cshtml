@using Aztobir.Business.ViewModels.Home.News
@model NewsViewVM
@{
    ViewData["Title"] = "Detail";
    int num = 0;
}

<!-- breadcrumb-banner-area -->
<div class="breadcrumb-banner-area bg-img-2 bg-opacity-2 ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text">
                    <div class="breadcrumb-menu">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-controller="News" asp-action="Index">News</a></li>
                            <li><span>@Model.NewsT.Name</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-banner-area-end -->
<!-- blog-story-start -->
<div class="blog-story-area pt-60 pb-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="blog-story mb-30">
                    <div class="blog-img-2">
                        <img src="~/assets/img/blog/@Model.NewsT.Image" alt="" />
                    </div>
                    <div class="blog-heading">
                        <h1>@Model.NewsT.Name</h1>
                    </div>
                    <div class="story-hbtitle">
                        <p>
                            @Model.NewsT.Content
                        </p>
                    </div>
                    <div class="meta-info">
                        <span class="meta-item"><i class="fa fa-clock-o"></i>@Model.NewsT.CreatedAt.Day/@Model.NewsT.CreatedAt.Month/@Model.NewsT.CreatedAt.Year</span>
                    </div>
                    <div class="contact-form">
                        <h3>Leave a Reply </h3>
                        <p>Your email address will not be published. Required fields are marked</p>
                        <form action="#">
                            <label>Comment</label>
                            <textarea id="comment" rows="8" cols="45" name="comment"></textarea>
                            <label>name</label>
                            <input type="text" />
                            <label>Email</label>
                            <input type="text" />
                            <label>Website</label>
                            <input type="text" />
                            <button>post comment</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 mb-30">
                <div class="sidebar-widget">
                    <h5 class="sidebar-title">Recent Posts</h5>
                    <ul class="widget">
                        @foreach (var news in Model.News)
                        {
                            @if (num <= 3)
                            {
                                <li class="widget-bottom">
                                    <div class="widget-img">
                                        <a asp-controller="News" asp-action="Detail" asp-route-id="@news.Id"><img src="~/assets/img/blog/@news.Image" alt="" /></a>
                                    </div>
                                    <div class="widget-title">
                                        <h4><a asp-controller="News" asp-action="Detail" asp-route-id="@news.Id">@news.Name</a></h4>
                                        <span>11 Comment </span>
                                        <span class="commentsm"><i class="fa fa-calendar"></i>@news.CreatedAt.Day/@news.CreatedAt.Month/@news.CreatedAt.Year</span>
                                    </div>
                                </li>
                                num++;
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- blog-story-end -->
