@using Aztobir.Business.ViewModels
@using Aztobir.Business.ViewModels.Home.University
@model Paginate<UniversityVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
    int num = 1;
     int count = ViewBag.TakeCount;
    int page = Model.PageCount;
    int productNum = ((Model.CurrentPage - 1) * count) + 1;
    int previous = Model.CurrentPage - 1;
    int next = Model.CurrentPage + 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Universiteler</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th >№</th>
                            <th>Fotoğraf</th>
                            <th>Ad</th>
                            <th>Şehir</th>
                            <th>Dil hazırlık</th>
                            <th>Telebe sayi</th>
                            <th>Fakulte sayi</th>
                            <th>Mezmun</th>
                            <th>Statü</th>
                            <th>Ayarlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var uni in Model.Items)
                        {
                            <tr>
                                <td class="ph">@num</td>
                                <td class="ph"><img class="php" src="~/assets/img/@uni.Image" alt="" /></td>
                                <td class="ph">@uni.Name</td>
                                <td class="ph">@uni.City</td>
                                <td class="ph">@(uni.EducationLanguage.Length<=5?uni.EducationLanguage:uni.EducationLanguage.Substring(0,5)+"...")</td>
                                <td class="ph">@uni.StudentCount</td>
                                <td class="ph">@uni.FacultyCount</td>
                                <td class="ph">@Html.Raw((uni.Content.Length<=5?uni.Content:uni.Content.Substring(0,5)+"..."))</td>
                                <td class="ph">@(@uni.Status==true ? "var" : "yoxdur")</td>
                                <td class="ph">
                                    <a class="btn btn-primary p-2" asp-action="Detail" asp-route-id="@uni.Id">
                                        <i class="mdi mdi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (Model.PageCount!=1 && Model.PageCount!=0)
                      {
                           <div class="col-lg-12 grid-margin stretch-card justify-content-center mt-4 mb-0">
                                <nav aria-label="...">
                                    <ul class="pagination pagination-md">
                                        <li class="page-item @(Model.CurrentPage<3?"d-none":"")">
                                            <a class="page-link" asp-action="Index" asp-route-page="1">First</a>
                                        </li>
                                        <li class="page-item @(Model.CurrentPage==1   ?"d-none":"")">
                                            <a class="page-link" asp-action="Index" asp-route-page="@previous">Previous</a>
                                        </li>

                                        @if (Model.CurrentPage >= 2 && Model.CurrentPage < Model.PageCount)
                                        {
                                            @for (int i = Model.CurrentPage - 1; i <= Model.CurrentPage + 1; i++)
                                            {
                                                <li class="page-item @(Model.CurrentPage==i?"disabled":"")">
                                                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                                </li>
                                            }
                                        }
                                        <li class="page-item @(Model.CurrentPage==Model.PageCount?"d-none":"")">
                                            <a class="page-link" asp-action="Index" asp-route-page="@next">Next ></a>
                                        </li>
                                        <li class="page-item @(Model.CurrentPage==Model.PageCount?"d-none":"")">
                                            <a class="page-link" asp-action="Index" asp-route-page="@Model.PageCount">Last</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>  
                      }
            </div>
        </div>
    </div>
</div>

