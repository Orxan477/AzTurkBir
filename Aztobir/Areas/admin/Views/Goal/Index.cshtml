@using Aztobir.Business.ViewModels.About
@model AboutViewVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
    int num = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Amaçlarımız</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th >№</th>
                            <th>Logo</th>
                            <th>Başlıq</th>
                            <th>Mezmun</th>
                            <th>Ayarlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var team in Model.Goals)
                        {
                            <tr>
                                <td class="ph">@num</td>
                                <td class="ph">@team.Logo</td>
                                <td class="ph">@team.Name</td>
                                <td class="ph">@(Html.Raw(team.Content))</td>
                                <td class="ph">
                                    <a class="btn btn-primary p-2" asp-action="Detail" asp-route-id="@team.Id">
                                        <i class="mdi mdi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

