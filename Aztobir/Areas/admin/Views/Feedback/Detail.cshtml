@using Aztobir.Business.ViewModels.Home
@model HomeVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="d-inline">
                <a asp-action="Index" class="mr-2 text-white d-flex">
                    <i style="color:black;" class="mdi mdi-menu-left"></i>
                    <h3 style="margin-bottom:0px; margin-top:6px;" class="d-inline card-title">Feedback </h3>
                </a>
            </h3>
                
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <td>Ad, Soyisim</td>
                            <td>@Model.Feedback.FullName</td>
                        </tr>
                        <tr>
                            <td>Fotoğraf</td>
                            <td><img src="/assets/img/@Model.Feedback.Image" /><td>
                        </tr>
                        <tr>
                            <td>Mezmun</td>
                            <td>@Model.Feedback.Comment</td>
                        </tr>
                        <tr>
                            <td>Universite</td>
                            <td>@Model.Feedback.University</td>
                        </tr>
                        <tr>
                            <td>
                                Settings
                            </td>
                            <td style="padding: 0 0 0 17px;">
                                <a style="padding:5px;" asp-action="Update" class="btn btn-warning" asp-route-id="@Model.Feedback.Id"><i class="mdi mdi-table-edit"></i></a>
                                <a style="padding:5px;" asp-action="Delete" class="btn btn-danger delete-btn" asp-route-id="@Model.Feedback.Id"><i class="mdi mdi-comment-remove-outline"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptModal{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>
    <script src="~/admin/assets/js/AlertModal.js"></script>
}