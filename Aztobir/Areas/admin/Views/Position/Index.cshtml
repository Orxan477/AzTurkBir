@using Aztobir.Business.ViewModels.Home.Position
@using Aztobir.Business.ViewModels.Home.University
@model UniversityViewVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
    int num = 1;
}

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Pozisyon</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Ad</th>
                            <th>Ayarlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var posi in Model.Positions)
                        {
                            <tr>
                                <td class="ph">@num</td>
                                <td class="ph">@posi.Name</td>
                                <td class="ph">
                                    <a style="padding:5px;" asp-area="admin" asp-controller="position" asp-action="Update" class="btn btn-warning" asp-route-id="@posi.Id"><i class="mdi mdi-table-edit"></i></a>
                                    <a style="padding:5px;" asp-area="admin" asp-controller="position" asp-action="Delete" class="btn btn-danger delete-btn" asp-route-id="@posi.Id"><i class="mdi mdi-comment-remove-outline"></i></a>
                                </td>
                            </tr>
                            num++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptModal{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>
    <script src="~/admin/assets/js/AlertModal.js"></script>
}