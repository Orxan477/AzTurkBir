@using Aztobir.Business.ViewModels.Home.Contact
@model IEnumerable<ContactVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
    int num = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ayarlar</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Ad,Soyisim</th>
                            <th>Email</th>
                            <th>Universite Ismi</th>
                            <th>Mesaj</th>
                            <th>Tarih</th>
                            <th>Ayarlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ph">@num</td>
                                <td class="ph">@item.FullName</td>
                                <td class="ph">@item.Email</td>
                                <td class="ph">@item.Phone</td>
                                <td class="ph">@(item.Message.Length<=5?item.Message:item.Message.Substring(0,5)+"...")</td>
                                <td class="ph">@item.CreatedAt</td>
                                <td style="padding: 0 0 0 17px;">
                                    <a style="padding:5px;" asp-action="Detail" class="btn btn-primary" asp-route-id="@item.Id"><i class="mdi mdi-eye"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

