@using Aztobir.Business.ViewModels.Home.News
@model NewsViewVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="d-inline">
                <a asp-action="Index" class="mr-2 text-white d-flex">
                    <i style="color:black;" class="mdi mdi-menu-left"></i>
                    <h3 style="margin-bottom:0px; margin-top:6px;" class="d-inline card-title">News </h3>
                </a>
            </h3>
                
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Image</th>
                            <th><img style="width:80px;" src="/assets/img/@Model.NewsDetail.Image" /></th>
                        </tr>
                        <tr>
                            <td>Name</td>
                            <td>@Model.NewsDetail.Name</td>
                        </tr>
                        <tr>
                            <td>Content</td>
                            <td>@Html.Raw(Model.NewsDetail.Content)</td>
                        </tr>
                        <tr>
                            <td>
                                Settings
                            </td>
                            <td style="padding: 0 0 0 17px;">
                                <a style="padding:5px;" asp-area="admin" asp-controller="news" asp-action="Update" class="btn btn-warning" asp-route-id="@Model.NewsDetail.Id"><i class="mdi mdi-table-edit"></i></a>
                                <a style="padding:5px;" asp-area="admin" asp-controller="news" asp-action="Delete" class="btn btn-danger delete-btn" asp-route-id="@Model.NewsDetail.Id"><i class="mdi mdi-comment-remove-outline"></i></a>
                                
                               @* <form method="post" asp-action="Delete" asp-route-id="@Model.NewsDetail.Id" class="d-inline">
                                       <button type="submit" style="padding:5px;"  class="btn btn-danger" ><i class="mdi mdi-comment-remove-outline"></i></button>

                                </form> *@                      
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section ScriptModal{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>
    <script src="~/admin/assets/js/AlertModal.js"></script>
}
