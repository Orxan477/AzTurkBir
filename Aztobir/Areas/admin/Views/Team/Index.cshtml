@using Aztobir.Business.ViewModels.Team
@model TeamViewVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
    int num = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekibimiz</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th >№</th>
                            <th>Fotoğraf</th>
                            <th>Ad, Soyisim</th>
                            <th>Pozisyon</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Ayarlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var team in Model.Teams)
                        {
                            <tr>
                                <td class="ph">@num</td>
                                <td class="ph"><img class="php" src="~/assets/img/@team.Image" alt="" /></td>
                                <td class="ph">@team.FullName</td>
                                <td class="ph">@team.Position</td>
                                <td class="ph">@team.Email</td>
                                <td class="ph">@team.Phone</td>   
                                <td class="ph">
                                    <a class="btn btn-primary p-2" asp-action="detail" asp-route-id="@team.Id">
                                        <i class="mdi mdi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
